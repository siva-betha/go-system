# --- PLC/OES MONITORING PLATFORM - PRODUCTION ENV ---

# Core
APP_ENV=production
APP_NAME=plc-etch-monitor
LOG_LEVEL=info

# Connection
HTTP_PORT=3000
WS_PORT=8080
API_BASE_PATH=/api/v1

# Databases
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=plc_monitor
POSTGRES_USER=plc_user
POSTGRES_PASSWORD=CHANGE_ME_SECURELY
POSTGRES_POOL_SIZE=20

INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=CHANGE_ME_TOKEN
INFLUXDB_ORG=fab-org
INFLUXDB_BUCKET=process_data
INFLUXDB_RETENTION=30d

# Streaming
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_RAW=plc.raw
KAFKA_TOPIC_ANALYTICS=plc.analytics

# Cache
REDIS_HOST=redis
REDIS_PORT=6379

# Storage
OES_DATA_PATH=/data/oes
COMPRESSION_LEVEL=3

# Security
JWT_SECRET=CHANGE_ME_JWT_SECRET
ENCRYPTION_KEY=CHANGE_ME_AES_KEY
CORS_ALLOWED_ORIGINS=https://monitor.fab.com

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=CHANGE_ME_ADMIN
